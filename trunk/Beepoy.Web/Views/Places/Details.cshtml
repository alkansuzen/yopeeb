@model Beepoy.Web.Models.Place

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Details</title>
</head>
<body>
    <fieldset>
        <legend>Place</legend>
    
        <div class="display-label">Name</div>
        <div class="display-field">@Model.Name</div>
    
        <div class="display-label">Latitude</div>
        <div class="display-field">@String.Format("{0:F}", Model.Latitude)</div>
    
        <div class="display-label">Longitude</div>
        <div class="display-field">@String.Format("{0:F}", Model.Longitude)</div>
    
        <div class="display-label">UserId</div>
        <div class="display-field">@Model.UserId</div>
    
        <div class="display-label">DateInsert</div>
        <div class="display-field">@String.Format("{0:g}", Model.DateInsert)</div>
    
        <div class="display-label">DateUpdate</div>
        <div class="display-field">@String.Format("{0:g}", Model.DateUpdate)</div>
    </fieldset>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id=Model.PlaceId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>

