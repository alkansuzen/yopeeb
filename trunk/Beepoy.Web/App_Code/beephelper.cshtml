@using Beepoy.Web.Models;

@helper showLatitude( Beep beep) {
    
    int length = 8;
    string strLat = beep.BeepsPlaces.First().Place.Latitude.ToString();
        
    if (strLat.Length > length) {
        @strLat.Replace(",", ".").Remove(length)
    } else {
        @strLat
    }
    
}


